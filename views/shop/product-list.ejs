<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>

    <main>
        <h1>My Products</h1>        
        <% if (prods.length > 0) { %>
        <div class="grid">
        <% for(let prod of prods){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= prod.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%=prod.imageUrl%>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%=prod.price%></h2>
                    <p class="product__description">US$<%=prod.description%></p>
                </div>
                <div class="card__actions">
                <a href="/products/<%=prod.id%>" class="btn">Details</a>
                   <%- include('../includes/add-to-cart.ejs',  {prod: prod}) %>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
          <p>keine Produkte vorhanden</p>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>